@model Inmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Cancelar";
}

<h4 class="mt-4">Cancelar contrato</h4>
<div>
    <hr />
    <div class="col">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaInicio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaInicio)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFin)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFin)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Precio)
            </dt>
            <dd class="col-sm-10">
                @("$" + Model.Precio)
            </dd>
            <dt class="col-sm-2">
                Multa
            </dt>
            <dd class="col-sm-10">
                @("$" + TempData["Multa"])
            </dd>
        </dl>
    </div>
    
    <form asp-action="Delete">
        <input type="submit" value="Cancelar contrato" class="btn btn-danger" />
        <a asp-action="Index" class="text-dark ml-3">Cancelar</a>
    </form>
</div>
