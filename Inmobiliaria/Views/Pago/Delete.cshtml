@model Inmobiliaria.Models.Pago

@{
    ViewData["Title"] = "Delete";
}

<h4 class="mt-4">Se borrará el siguiente pago</h4>
<div>
    <hr />
    <div class="col mx-auto">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NumeroPago)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NumeroPago)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Fecha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Fecha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Importe)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Importe)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="submit" value="Borrar pago" class="btn btn-danger" />
        <a asp-action="Index" class="text-dark ml-3">Cancelar</a>
    </form>
</div>
